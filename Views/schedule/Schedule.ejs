<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1><%= title %></h1>
        
        <div class="mb-3">
            <a href="/" class="btn btn-secondary">На главную</a>
            <a href="/schedule/add" class="btn btn-primary">Добавить занятие</a>
        </div>

        <!-- Фильтры -->
        <div class="card mb-3">
            <div class="card-body">
                <form method="GET" class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Группа</label>
                        <select name="group_id" class="form-select" onchange="this.form.submit()">
                            <option value="">Все группы</option>
                            <% if (groups && groups.length > 0) { %>
                                <% for (let i = 0; i < groups.length; i++) { %>
                                    <option value="<%= groups[i].id %>" 
                                        <%= selectedGroup == groups[i].id ? 'selected' : '' %>>
                                        <%= groups[i].name %>
                                    </option>
                                <% } %>
                            <% } %>
                        </select>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label">Преподаватель</label>
                        <select name="teacher_id" class="form-select" onchange="this.form.submit()">
                            <option value="">Все преподаватели</option>
                            <% if (teachers && teachers.length > 0) { %>
                                <% for (let i = 0; i < teachers.length; i++) { %>
                                    <option value="<%= teachers[i].id %>" 
                                        <%= selectedTeacher == teachers[i].id ? 'selected' : '' %>>
                                        <%= teachers[i].first_name %> <%= teachers[i].last_name %>
                                    </option>
                                <% } %>
                            <% } %>
                        </select>
                    </div>
                </form>
            </div>
        </div>

        <!-- Таблица расписания -->
        <% if (schedule && schedule.length > 0) { %>
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>День</th>
                        <th>Время</th>
                        <th>Дисциплина</th>
                        <th>Преподаватель</th>
                        <th>Группа</th>
                        <th>Аудитория</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i = 0; i < schedule.length; i++) { %>
                    <tr>
                        <td><%= schedule[i].id %></td>
                        <td><%= schedule[i].day_of_week %></td>
                        <td><%= schedule[i].start_time %> - <%= schedule[i].end_time %></td>
                        <td><%= schedule[i].course_name || '-' %></td>
                        <td><%= schedule[i].teacher_name || '-' %></td>
                        <td><%= schedule[i].group_name || '-' %></td>
                        <td><%= schedule[i].classroom_number || '-' %></td>
                        <td>
                            <a href="/schedule/<%= schedule[i].id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                            <form action="/schedule/<%= schedule[i].id %>/delete" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-danger" 
                                        onclick="return confirm('Удалить?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        <% } else { %>
            <div class="alert alert-info">
                Нет занятий в расписании
            </div>
        <% } %>
    </div>
</body>
</html>