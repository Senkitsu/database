<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1><%= title %></h1>
        
        <div class="details-card">
            <div class="detail-item">
                <strong>Дисциплина:</strong>
                <span><%= schedule.course_name %></span>
            </div>
            
            <div class="detail-item">
                <strong>Преподаватель:</strong>
                <span><%= schedule.teacher_name %></span>
            </div>
            
            <div class="detail-item">
                <strong>Группа:</strong>
                <span><%= schedule.group_name %></span>
            </div>
            
            <div class="detail-item">
                <strong>Аудитория:</strong>
                <span><%= schedule.classroom_number %> (<%= schedule.classroom_type %>)</span>
            </div>
            
            <div class="detail-item">
                <strong>День недели:</strong>
                <span><%= getDayName(schedule.day_of_week) %></span>
            </div>
            
            <div class="detail-item">
                <strong>Время:</strong>
                <span><%= schedule.start_time %> - <%= schedule.end_time %></span>
            </div>
            
            <div class="detail-item">
                <strong>Тип занятия:</strong>
                <span><%= getLessonType(schedule.lesson_type) %></span>
            </div>
        </div>
        
        <div class="actions">
            <a href="/schedule/<%= schedule.id %>/edit" class="btn btn-edit">Редактировать</a>
            <a href="/schedule" class="btn btn-secondary">Назад к расписанию</a>
        </div>
    </div>

    <script>
        function getDayName(day) {
            const days = ['Понедельник', 'Вторник', 'Среда', 'Четверг', 'Пятница', 'Суббота', 'Воскресенье'];
            return days[day - 1];
        }

        function getLessonType(type) {
            const types = {
                'lecture': 'Лекция',
                'practice': 'Практика', 
                'lab': 'Лабораторная'
            };
            return types[type] || type;
        }
    </script>
</body>
</html>