<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1><%= title %></h1>
        
        <div class="actions">
            <a href="/schedule/groups/add" class="btn btn-primary">Добавить группу</a>
            <a href="/schedule" class="btn btn-secondary">Назад к расписанию</a>
        </div>

        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Факультет</th>
                        <th>Количество студентов</th>
                        <th>Занятий в расписании</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    <% groups.forEach(group => { %>
                    <tr>
                        <td><%= group.name %></td>
                        <td><%= group.faculty_name %></td>
                        <td><%= group.student_count %></td>
                        <td><%= group.schedule_count %></td>
                        <td class="actions">
                            <a href="/schedule/groups/<%= group.id %>/edit" class="btn btn-edit">Редактировать</a>
                            <form action="/schedule/groups/<%= group.id %>/delete" method="POST" class="inline-form">
                                <button type="submit" class="btn btn-delete" onclick="return confirm('Удалить группу?')">Удалить</button>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>