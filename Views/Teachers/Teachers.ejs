<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1><%= title %></h1>
        
        <div class="actions">
            <a href="/teachers/add" class="btn btn-primary">Добавить преподавателя</a>
            <a href="/teachers/departments" class="btn btn-secondary">Управление кафедрами</a>
        </div>

        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>ФИО</th>
                        <th>Email</th>
                        <th>Телефон</th>
                        <th>Кафедра</th>
                        <th>Должность</th>
                        <th>Ученая степень</th>
                        <th>Занятий</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    <% teachers.forEach(teacher => { %>
                    <tr>
                        <td><%= teacher.first_name %> <%= teacher.last_name %></td>
                        <td><%= teacher.email %></td>
                        <td><%= teacher.phone %></td>
                        <td><%= teacher.department_name %></td>
                        <td><%= teacher.position %></td>
                        <td><%= teacher.degree %></td>
                        <td><%= teacher.schedule_count %></td>
                        <td class="actions">
                            <a href="/teachers/<%= teacher.id %>/edit" class="btn btn-edit">Редактировать</a>
                            <form action="/teachers/<%= teacher.id %>/delete" method="POST" class="inline-form">
                                <button type="submit" class="btn btn-delete" onclick="return confirm('Удалить преподавателя?')">Удалить</button>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>